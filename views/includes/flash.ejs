<!-- Alert for success -->
<% if (success.length> 0) { %>
    <div class="alert alert-success col-8 offset-2 alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <!-- Alert for error -->
        <% if (error.length > 0) { %>
            <div class="alert alert-danger col-8 offset-2 alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>