<% layout("layouts/boilerplate") %>

    <div class="container">
        <div class="row">
            <div class="card listing-card mt-3 col-md-8 offset-md-2 col-10 offset-1">
                <p><b>Owner: <%= listing.owner.username %></b></p>
                <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=listing.title%>
                    </h5>
                    <p class="card-text">
                        <%=listing.description%>
                    </p>
                    <p class="card-text">
                        Location: <%=listing.location%>
                    </p>
                    <p>Country: <%=listing.country%>
                    </p>
                    <p>Price: <%=listing.price%>
                    </p>
                    <% if (curUser && listing.owner && curUser._id.equals(listing.owner._id)) { %>
                        <div class="btns">
                            <a href="/listings/<%=listing._id%>/edit" class="btn btn-warning">Edit</a>
                            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"><button type="submit"
                                    class="btn btn-danger">Delete</button></form>
                        </div>
                        <% } %>

                </div>
            </div>
        </div>
        <% if (curUser) { %>
            <hr>
            <div class="row">
                <div class="mt-3 col-md-8 offset-md-2 col-10 offset-1">
                    <h3>Leave a Review</h3>
                    <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
                        <div>
                            <!-- Strability -->
                            <fieldset class="starability-slot">
                                <legend>Rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked
                                    aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="rating" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="rating" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="rating" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="rating" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="rating" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div>
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control" name="comment" cols="40" rows="3" id="comment"
                                required></textarea>
                            <div class="invalid-feedback">Please add some comments for review</div>
                        </div>
                        <button class="btn btn-outline-dark" type="submit">Submit</button>
                    </form>
                </div>
            </div>
            <% } %>
                <% if (listing.reviews.length > 0) { %>
                    <div class="row">
                        <div class="mt-3 col-md-8 offset-md-2 col-10 offset-1">
                            <h3>Customer Reviews</h3>
                            <div class="row">
                                <% for (const review of listing.reviews) { %>
                                    <div class="card col-5 ms-5 mb-3">
                                        <div class="card-body">

                                            <h3>@<%=review.author.username%>
                                            </h3>
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated: 3 stars
                                            </p>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>

                                            <form method="POST"
                                                action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                                <button class="btn btn-dark">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                        <div class="row m-5">
                            <div class="mt-3 col-12">
                                <h4>üìç Where you‚Äôll be</h4>

                                <div id="map" style="height:400px; width:100%; border-radius:10px;"></div>
                            </div>
                        </div>
    </div>

    
    <script>
        window.listingCoords = {
            lat: "<%= listing.coords.lat %>",
            lng: "<%= listing.coords.lng %>",
            location: "<%= listing.location %>",
        };
    </script>